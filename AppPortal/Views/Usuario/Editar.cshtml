@model UsuarioNuevoModel
@{
	ViewBag.Title = "Editar Usuario";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("ModifyUsuario", "Usuario", FormMethod.Post))
{
	<div class="row">
		<div class="col-md-12">
			@Html.HiddenFor(d => d.Id)
			@Html.LabelFor(d => d.UsuNombre)
			@Html.TextBoxFor(d => d.UsuNombre, "", new { @class = "form-control"})
			@Html.LabelFor(d => d.UsuPass)
			@Html.PasswordFor(d => d.UsuPass, new { @class = "form-control"})
			<br>
			<div style="text-align:right;">
				<input value="Guardar" class="btn btn-primary" type="submit">
			</div>
		</div>
	</div>
}
